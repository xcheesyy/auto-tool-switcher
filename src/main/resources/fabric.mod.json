{
	"schemaVersion": 1,
	"id": "auto-tool-switcher",
	"version": "${version}",
	"name": "Auto Tool Switcher",
	"description": "This is a QOL mod which automatically switches to the required tool when trying to break a block.",
	"authors": [
		"xcheesyy"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/xcheesyy/auto-tool-switcher"
	},
	"license": "CC0-1.0",
	"icon": "assets/auto-tool-switcher/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.xcheesyy.switcher.AutoToolSwitcher"
		],
		"client": [
			"com.xcheesyy.switcher.AutoToolSwitcherClient"
		]
	},
	"mixins": [
		"auto-tool-switcher.mixins.json",
		{
			"config": "auto-tool-switcher.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.4",
		"minecraft": "~1.21.11",
		"java": ">=21",
		"fabric-api": "*"
	}
}